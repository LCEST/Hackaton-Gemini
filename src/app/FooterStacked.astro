---
import CopyrightNotice from '../components/CopyrightNotice.astro';
const SITE_URL = import.meta.env.SITE;
---

<footer
	class="md:flex md:items-center md:justify-between px-4 2xl:px-0 py-6 md:py-10"
>
	<CopyrightNotice />

	<ul class="flex flex-wrap justify-center items-center gap-4">
		<li class="list-item mt-0">
			<a
				class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition duration-200 ease-in-out"
				href=`https://twitter.com/intent/tweet?text=Check out this awesome project using Google's Gemini!&amp;url=${SITE_URL}`
				target="_blank"
			>
				<svg
					width="18"
					height="18"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="icon icon-tabler icons-tabler-outline icon-tabler-share inline mt-0"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
						d="M6 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
						d="M18 6m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
						d="M18 18m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0"></path><path
						d="M8.7 10.7l6.6 -3.4"></path><path d="M8.7 13.3l6.6 3.4"></path>
				</svg>
				Share
			</a>
		</li>
		<li class="list-item mt-0">
			<a
				class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition duration-200 ease-in-out"
				href="https://github.com/LCEST/Hackaton-Gemini"
				target="_blank"
			>
				<svg
					width="18"
					height="18"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="icon icon-tabler icons-tabler-outline icon-tabler-code inline"
				>
					<path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
						d="M7 8l-4 4l4 4"></path><path d="M17 8l4 4l-4 4"></path><path
						d="M14 4l-4 16"></path>
				</svg>
				Github
			</a>
		</li>
	</ul>
</footer>
