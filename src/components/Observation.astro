---
import type { ObservationData } from './ObservationList.astro';

const { id, title, timeStart, timeEnd, comment } = Astro.props as ObservationData;
---

<li class="py-3" id={id}>
  <div class="p-2 hover:bg-slate-900 transitiond duration-200 rounded-lg flex justify-between">
    <div class="flex min-w-0">
      <div>
        <p
          class="font-medium text-gray-900 truncate dark:text-white"
        >
          {title}
        </p>
      </div>
    </div>
    <div
      class="text-base font-semibold text-gray-900 dark:text-white"
    >
      {timeStart} - {timeEnd}
    </div>
  </div>
  <p class="flex-1 text-sm px-2 text-gray-500">{comment}</p>
</li>
